.type-msg
    position absolute
    //left 80px
    left 20px
    right 80px
    top 0
    bottom 0
    padding 15px 0
    &__field
        font-family HelveticaNeueRoman, Arial, sans-serif
        font-size 14px
        color #293543
        padding 4px 8px
        border none
        background #FCF8F7
        border 2px solid #C9C4CA
        border-radius 4px
        width 100%
        height 100%
        resize none

.send-msg
    position absolute
    top 0
    bottom 0
    right 0
    width 80px
    cursor pointer
    &__text
        font-family HelveticaNeueRoman, Arial, sans-serif
        color #FCF8F7
        font-size 16px
        text-transform uppercase
        display inline-block
        position: absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
    &:hover
        .send-msg__text
            color #84D6D4

.message
    padding 10px 10px 10px 80px
    &__time
        margin-bottom 10px
        position relative
        background #373D4B
        padding 4px 8px 4px 26px
        border-radius 2px
        display inline-block
        color #88535B
        font-family HelveticaNeueMedium, Arial, sans-serif
        font-size 13px
        &__icon
            position absolute
            top 4px
            left 6px
            width 14px
            height 14px
            fill #bdb7b6
            display inline-block
            vertical-align top
    &__content
        text-align left
        color #293543
        position relative
        background #91d3f1
        border-radius 4px
        padding 15px 20px
        min-height 20px
        &:after
            position absolute
            left 100%
            top 50%
            transform translate(0,-50%)
            content ''
            width 0
            height 0
            border-top 12px solid transparent
            border-left 8px solid #91d3f1
            border-bottom 0px solid transparent
        &__name
            font-family HelveticaNeueMedium, Arial, sans-serif
            font-size 16px
            text-transform uppercase
            margin-bottom 5px
            display inline-block
        &__text
            font-family HelveticaNeueRegular, Arial, sans-serif
            font-size 14px
            line-height 18px
    &_received
        padding 10px 80px 10px 10px
        text-align right
        .message__content
            background #ffffff
            &:after
                left auto
                right 100%
                border-left none
                border-right 8px solid #ffffff

.highlight
    font-family HelveticaNeueRegular, Arial, sans-serif
    font-weight bold
    background #8D3D46
    color #ffffff
    padding 2px 4px
    border-radius 2px

.smile
    display inline-block
    width 56px
    height 57px
    background-image url('../images/sprite.png')
    background-position 0 0
    &_two
        background-position -56px 0
    &_free
        background-position -112px 0
    &_four
        background-position 0 -57px

	
