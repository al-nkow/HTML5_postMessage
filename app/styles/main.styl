*
    &:focus
        outline none

html, body
    height 100%
    margin 0
    padding 0

body
    -webkit-font-smoothing: antialiased;
    position relative
    font-family 'robotomedium', Helvetica, Arial

input::-webkit-input-placeholder
    opacity 1
    transition opacity 0.2s ease
    color #293543
input::-moz-placeholder
    opacity 1
    transition opacity 0.2s ease
    color #293543
input:-moz-placeholder
    opacity 1
    transition opacity 0.2s ease
    color #293543
input:-ms-input-placeholder
    opacity 1
    transition opacity 0.2s ease
    color #293543
input:focus::-webkit-input-placeholder
    opacity 0
    transition opacity 0.2s ease
input:focus::-moz-placeholder
    opacity 0
    transition opacity 0.2s ease
input:focus:-moz-placeholder
    opacity 0
    transition opacity 0.2s ease
input:focus:-ms-input-placeholder
    opacity 0
    transition opacity 0.2s ease

.main-wrap
    box-sizing border-box
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    overflow-x hidden
    overflow-y auto
    background #E8E7E5

input::-ms-clear
    display none

.wrap-block
    height 100%
    width 50%
    float left
    box-sizing border-box
    padding 60px

iframe
    width 100%
    height 100%
    border none

.chat-wrap
    padding 20px
    height 100%
    box-sizing border-box

.chat
    box-shadow 0 2px 4px -1px rgba(0,0,0,.2), 0 4px 5px 0 rgba(0,0,0,.14), 0 1px 10px 0 rgba(0,0,0,.12)
    height 100%
    max-width 600px
    background #404654
    margin 0 auto
    position relative
    border-radius 3px
    overflow hidden
    &__header
        position absolute
        top 0
        left 0
        right 0
        background #293543
        padding 20px
        height 30px
    &__content
        position absolute
        top 70px
        left 0
        right 0
        bottom 80px
        padding 20px
        overflow auto
    &__footer
        position absolute
        height 80px
        bottom 0
        left 0
        right 0
        background #293543
        
.name-inp
    text-transform uppercase
    font-family HelveticaNeueMedium
    font-size 15px
    margin 0 auto
    border none
    display block
    width 100%
    max-width 400px
    height 30px
    padding 4px 20px
    background #84D6D4
    color #293543
    border-radius 3px

